[Unit]
Description=Compton compositor

[Service]
#https://github.com/zoqaeski/systemd-user-units/blob/master/user/compton.service#L6
# only need when -b option is supplied
#Type=forking
ExecStart=/usr/bin/compton --config /dev/null --backend xrender --unredir-if-possible
Restart=on-abort

[Install]
WantedBy=graphical.target
