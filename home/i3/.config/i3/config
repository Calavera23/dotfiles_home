# set wallpaper
exec_always feh --no-fehbg --bg-scale "$XDG_DATA_HOME/wallpaper-1.jpg" --xinerama-index 0

#for_window [class="^mpv$"] move up
for_window [class="explorer.exe"] floating enable
#for_window [class="^plasmawindowed$"] kill
#for_window [class="^Firefox$"] border pixel 1
